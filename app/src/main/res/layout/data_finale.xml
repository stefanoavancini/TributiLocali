<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#ffd3d3d3"
    android:clickable="false"
    android:dividerPadding="@dimen/abc_search_view_preferred_width"
    android:focusableInTouchMode="true"
    android:id="@+id/LinearLayout_data_anno"
    android:weightSum="1">
    <ListView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/abc_config_prefDialogWidth"
        android:id="@+id/lv_dati"
        android:cacheColorHint="#ffefefef"
        android:dividerHeight="@dimen/abc_action_bar_default_padding_material"
        android:layout_marginLeft="@dimen/abc_dropdownitem_text_padding_left"
        android:layout_marginTop="@dimen/abc_dropdownitem_text_padding_left"
        android:layout_marginRight="@dimen/abc_dropdownitem_text_padding_left"
        android:clickable="true"
        android:elevation="@dimen/abc_button_inset_horizontal_material"
        android:background="@color/bright_foreground_inverse_material_light"
        android:divider="#ffd5d5d5" />

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="#cccccc"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Riga Uno"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_gravity="left"
            android:paddingLeft="20dp"
            android:id="@+id/riga1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="15dp"
            android:text="Riga Due"
            android:textColor="#000"
            android:textSize="20sp"
            android:paddingLeft="20dp"
            android:layout_gravity="left"
            android:paddingTop="15dp"
            android:id="@+id/riga2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="15dp"
            android:text="Riga Tre"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_gravity="left"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:id="@+id/riga3" />


    </LinearLayout>

</LinearLayout>
