<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/list_butt"
    android:layout_marginLeft="@dimen/abc_dropdownitem_text_padding_left"
    android:layout_marginRight="@dimen/abc_dropdownitem_text_padding_left"
    android:layout_marginBottom="@dimen/abc_dropdownitem_text_padding_left"
    android:paddingTop="5dp"
    android:paddingRight="5dp"
    android:paddingLeft="5dp">

    <TextView
        android:id="@+id/Contribuente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nessun Contribuente presente"
        android:paddingLeft="18dp"
        android:paddingTop="10dp"
        android:textColor="#263238"
        android:textSize="22dp" />
    <TextView
        android:id="@+id/Codice_fiscale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nessun Contribuente presente"
        android:paddingLeft="18dp"
        android:textColor="#27ae60"
        android:textSize="14dp" />
    <TextView
        android:id="@+id/Matricola"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nessun Contribuente presente"
        />

</LinearLayout>