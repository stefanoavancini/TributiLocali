<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape  android:shape="rectangle">

            <solid android:color="#ff696969" />
            <corners android:radius="15dp" />

        </shape>
    </item>

    <!-- White Top color -->
    <item android:bottom="6px">

        <shape  android:shape="rectangle">
            <gradient
                android:startColor="#f4f4f4"
                android:centerColor="#fcfcfc"
                android:endColor="#e8e8e8"
                android:angle="270" />

            <corners android:radius="15dp" />


        </shape>

    </item>


</layer-list>